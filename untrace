#!/bin/bash
# Remove @trace decorators from Python files
# Usage: untrace [files/dirs...]   (defaults to all *.py recursively from current dir)

targets=("${@:-.}")
count=0

while IFS= read -r f; do
    [ -f "$f" ] || continue
    if grep -qE '^\s*@trace\b' "$f"; then
        matches=$(grep -cE '^\s*@trace\b' "$f")
        # Use grep -v to filter out @trace lines (portable across macOS/Linux)
        grep -vE '^\s*@trace\b' "$f" > "${f}.tmp" && mv "${f}.tmp" "$f"
        echo "  $f: removed $matches @trace line(s)"
        count=$((count + matches))
    fi
done < <(
    for t in "${targets[@]}"; do
        if [ -d "$t" ]; then
            find "$t" -name "*.py" -type f
        elif [ -f "$t" ]; then
            echo "$t"
        fi
    done
)

if [ "$count" -eq 0 ]; then
    echo "No @trace decorators found."
else
    echo "Removed $count total."
fi
